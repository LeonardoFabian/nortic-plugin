{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "nortic-plugin/link-cloud",
  "title": "Link Cloud",
  "category": "text",
  "description": "Add a custom link cloud block",
  "keywords": [
    "cloud",
    "link"
  ],
  "version": "1",
  "textdomain": "nortic-plugin",
  "editorScript": "file:./index.js",
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "link": {
      "type": "string",
      "default": "#"
    },
    "linkTarget": {
      "type": "string",
      "default": "_blank"
    },
    "imageID": {
      "type": "number",
      "default": 0
    },
    "imageAlt": {
      "type": "string",
      "default": "",
      "source": "attribute",
      "selector": "img",
      "attribute": "alt"
    },
    "imageUrl": {
      "type": "string",
      "default": "",
      "source": "attribute",
      "selector": "img",
      "attribute": "src"
    },
    "imageShape": {
      "type": "string",
      "default": "circle"
    }
  },
  "style": "file:./index.css"
}