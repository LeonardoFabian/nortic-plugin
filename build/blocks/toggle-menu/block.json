{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "nortic-plugin/toggle-menu",
  "title": "Toggle Menu",
  "category": "text",
  "description": "Add a custom toggle menu",
  "keywords": [
    "toggle",
    "menu"
  ],
  "version": "1",
  "textdomain": "nortic-plugin",
  "editorScript": "file:./index.js",
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "color": {
      "type": "string",
      "default": "#003876"
    },
    "background_color": {
      "type": "string",
      "default": "#FFFFFF"
    },
    "menu_icon": {
      "type": "string",
      "default": "menu-grid-r"
    },
    "menu_icon_url": {
      "type": "string",
      "default": "https://mt.gob.do/images/svg/icons/menu-grid-r.svg"
    },
    "menu_position": {
      "type": "string",
      "default": "absolute"
    },
    "transition_direction": {
      "type": "string",
      "default": "top-sheet"
    },
    "visibility": {
      "type": "string",
      "default": "block"
    },
    "display": {
      "type": "string",
      "default": "grid"
    },
    "columns": {
      "type": "number",
      "default": 3
    }
  },
  "style": "file:./index.css",
  "script": "file:./frontend-toggle-menu.js"
}