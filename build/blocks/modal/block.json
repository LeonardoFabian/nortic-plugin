{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "nortic-plugin/modal",
  "title": "Modal",
  "category": "text",
  "description": "Add a custom modal",
  "keywords": [
    "modal",
    "bottom sheet",
    "top sheet"
  ],
  "version": "1",
  "textdomain": "nortic-plugin",
  "editorScript": "file:./index.js",
  "attributes": {
    "title": {
      "type": "string",
      "default": ""
    },
    "color": {
      "type": "string",
      "default": "#003876"
    },
    "background_color": {
      "type": "string",
      "default": "#FFFFFF"
    },
    "anchor": {
      "type": "string",
      "default": "nortic-modal"
    },
    "transition_direction": {
      "type": "string",
      "default": "bottom-sheet"
    },
    "display": {
      "type": "string",
      "default": "grid"
    },
    "columns": {
      "type": "number",
      "default": 4
    }
  },
  "style": "file:./index.css",
  "script": "file:./frontend-modal.js"
}