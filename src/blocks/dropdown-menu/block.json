{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "nortic-plugin/dropdown-menu",
    "title": "Dropdown Menu",
    "category": "text",
    "description": "Add a custom dropdown menu",
    "keywords": ["dropdown", "menu"],
    "version": "1",
    "textdomain": "nortic-plugin",
    "editorScript": "file:./index.js",
    "attributes": {
        "title": {
            "type": "string",
            "default": ""
        },
        "color": {
            "type": "string",
            "default": "#003876"
        },
        "background_color": {
            "type": "string",
            "default": "#FFFFFF"
        },
        "show_on_desktop": {
            "type": "boolean",
            "default": true
        },
        "desktop_menu_icon": {
            "type": "string",
            "default": "dropdown-menu-grid"
        },
        "desktop_menu_icon_url": {
            "type": "string",
            "default": "/wp-content/plugins/nortic-plugin/dist/public/images/icons/dropdown-menu-grid.svg"
        },
        "show_on_mobile": {
            "type": "boolean",
            "default": true
        },
        "mobile_menu_icon": {
            "type": "string",
            "default": "dropdown-menu-hamburger"
        },
        "mobile_menu_icon_url": {
            "type": "string",
            "default": "/wp-content/plugins/nortic-plugin/dist/public/images/icons/dropdown-menu-hamburger.svg"
        },
        "close_menu_icon": {
            "type": "string",
            "default": "dropdown-menu-close-circle"
        }, 
        "close_menu_icon_url": {
            "type": "string",
            "default": "/wp-content/plugins/nortic-plugin/dist/public/images/icons/dropdown-menu-close-circle.svg"
        }, 
        "menu_position": {
            "type": "string",
            "default": "absolute"
        },
        "desktop_columns": {
            "type": "number",
            "default": 3
        },
        "mobile_columns": {
            "type": "number",
            "default": 3
        }
    },
    "style": "file:./index.css",
    "script": "file:./frontend-dropdown-menu.js"
}