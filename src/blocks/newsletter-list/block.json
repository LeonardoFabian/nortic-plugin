{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "nortic-plugin/newsletter-list",
    "title": "Newsletter List",
    "category": "text",
    "description": "Add a list of newsletters",
    "keywords": ["newsletters", "list"],
    "version": "1",
    "textdomain": "nortic-plugin",
    "editorScript": "file:./index.js",
    "attributes": {
        "title": {
            "type": "string",
            "default": ""
        },
        "columns": {
            "type": "number",
            "default": 4
        },
        "itemsPerPage": {
            "type": "number",
            "default": 100
        },
        "newsletterCategories": {
            "type": "array",
            "default": []
        },
        "order": {
            "type": "string",
            "default": "desc"
        },
        "orderBy": {
            "type": "string",
            "default": "date"
        }
    },
    "style": "file:./index.css"
}