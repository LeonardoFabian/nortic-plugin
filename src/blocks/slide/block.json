{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "nortic-plugin/slide",
    "title": "Slide",
    "category": "text",
    "description": "Add an slide to slideshow block",
    "keywords": ["slide"],
    "version": "1",
    "textdomain": "",
    "editorScript": "file:./index.js",
    "attributes": {
        "title": {
            "type": "string",
            "default": ""
        },
        "titleColor": {
            "type": "string",
            "default": "#FFFFFF"
        },
        "subTitle": {
            "type": "string",
            "default": ""
        },
        "subTitleColor": {
            "type": "string",
            "default": "#FFFFFF"
        },
        "imageID": {
            "type": "number",
            "default": 0
        },
        "imageUrl": {
            "type": "string",
            "default": ""
        },
        "imageAlt": {
            "type": "string",
            "default": ""
        },
        "showTitle": {
            "type": "boolean",
            "default": true
        },  
        "showSubTitle": {
            "type": "boolean",
            "default": true
        },
        "buttonLabel": {
            "type": "string",
            "default": "Leer m√°s"
        },
        "buttonUrl": {
            "type": "string",
            "default": "#"
        },
        "buttonColor": {
            "type": "string",
            "default": "#003876"
        },
        "showButton": {
            "type": "boolean",
            "default": true
        }

    },
    "style": "file:./index.css"
}